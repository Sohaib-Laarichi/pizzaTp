<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="#F2E8C2">

    <!-- Pizza Image -->
    <ImageView
        android:id="@+id/pizzaImage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/pizza1" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <!-- Pizza Name -->
        <TextView
            android:id="@+id/pizzaName"
            android:fontFamily="@font/forrest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"

            android:textStyle="bold"
            android:textColor="@android:color/black"/>

        <!-- Row for Servings and Time -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <!-- People Icon & Number -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/horloges"/>
            <TextView
                android:id="@+id/pizzaTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="15sp"
                android:textColor="@android:color/darker_gray"/>



            <!-- Clock Icon & Time -->
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@mipmap/star"
                android:layout_marginStart="10dp"/>
            <TextView
                android:id="@+id/pizzaRating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>


        </LinearLayout>
    </LinearLayout>

    <!-- Bookmark Icon -->
    <ImageView
        android:id="@+id/bookmarkIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@mipmap/entrer"
        android:layout_marginEnd="10dp"/>
</LinearLayout>